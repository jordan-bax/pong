{
  "name": "type",
  "version": "1.0.0",
  "description": "A simple TypeScript project",
  "scripts": {
    "copy-html": "cpx \"src/frontend/**/*.{html,js,css}\" dist/frontend",
    "build:frontend": "tsc -p src/frontend && npm run copy-html",
    "build:backend": "tsc -p src/backend",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/backend/index.js"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@types/node": "^22.15.17",
    "bcryptjs": "^2.4.3",
    "fastify": "^5.3.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "cpx": "^1.2.1",
    "typescript": "^5.0.0"
  }
}
